<div class="form-toggle d-flex flex-column align-items-center mt-4">
  {{!-- Login form --}}
  <form class="form login-form d-flex flex-column py-3 px-4 ">
    <h2 class="align-self-center">Login</h2>
    <div class="form-group">
      <label for="username-login">Username</label>
      <input type="text" class="form-control" id="username-login">
    </div>
    <div class="form-group">
      <label for="password-login">Password</label>
      <input type="password" class="form-control" id="password-login">
    </div>
    <button type="submit" class="btn submit-btn">Submit</button>
    <small class="switch-form mt-2"><p class="m-0 p-1">Don't have an account SignUp here.</p></small>
  </form>

  {{!-- Signup form --}}
  <form class="form signup-form d-flex flex-column py-3 px-4 d-none">
    <h2 class="align-self-center">SignUp</h2>
    <div class="form-group">
      <label for="username-signup">Username</label>
      <input type="text" class="form-control" id="username-signup">
    </div>
    <div class="form-group">
      <label for="password-signup">Password</label>
      <input type="password" class="form-control" id="password-signup">
    </div>
    <button type="submit" class="btn submit-btn">Submit</button>
    <small class="switch-form mt-2"><p class="m-0 p-1">Already have an account Login here.</p></small>
  </form>
</div>